<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.roa.foodonetv3.fragments.NewGroupFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_size_80">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/grey_group"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/imageView3"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/margin_16"
            android:layout_marginStart="@dimen/margin_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_16"
            android:layout_marginLeft="@dimen/margin_16"
            android:layout_marginStart="@dimen/margin_16"
            android:background="#FF909090"
            android:id="@+id/view" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editGroupName"
            android:hint="@string/group_name"
            android:maxLength="12"
            style="@style/FooLarge"
            android:layout_toEndOf="@id/imageView3"
            android:layout_toRightOf="@id/imageView3"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginLeft="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_16"
            android:layout_marginRight="@dimen/margin_16"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/layoutMembers">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text1"
            style="@style/FooBlackMedium"
            android:text="@string/group_members"
            android:layout_marginLeft="@dimen/margin_32"
            android:layout_marginStart="@dimen/margin_32"
            android:layout_marginRight="@dimen/margin_32"
            android:layout_marginEnd="@dimen/margin_32"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginBottom="@dimen/margin_16"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_16"
            android:layout_marginLeft="@dimen/margin_16"
            android:layout_marginStart="@dimen/margin_16"
            android:background="#FF909090"
            android:id="@+id/view2" />

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recyclerGroupMembers" />

    </LinearLayout>



</LinearLayout>
